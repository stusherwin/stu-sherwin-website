@model StuSherwin.Mvc.Models.Model
<!DOCTYPE html>
<html>
<head>
    <title>
        @if(Model.Layout.IsHomePage) {
            <text>Stu Sherwin</text>
        }
        else {
            @(ViewBag.Title)<text> - Stu Sherwin</text>
        }
    </title>
    
    <link href="@Url.Content("~/Content/css/Site.css")" rel="stylesheet" type="text/css" />
    <link  href="http://fonts.googleapis.com/css?family=Vollkorn:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css" >
    <link  href="http://fonts.googleapis.com/css?family=Quattrocento+Sans:regular" rel="stylesheet" type="text/css" >
    
    <script src="@Url.Content("~/Content/js/lib/jquery-1.4.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/lib/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/lib/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/lib/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/ckeditor/adapters/jquery.js"></script>
    <script type="text/javascript" src="/Content/js/HtmlContent.js"></script>
</head>

<body>
    <div id="container">
        <div id="sidebar">
            <div id="header">
                <h1><a href="/">Stu Sherwin</a></h1>
                @Html.Partial("_Tagline", Model.Layout)
            </div>
            @if(!Model.Layout.IsHomePage)
            {
                @Html.Partial("Navigation\\_Navigation", Model.Layout)
            }
            @Html.Partial("_Contact")
        </div>
        @RenderBody()
    </div>
    <script type="text/javascript" src="/Content/js/Scrolling.js"></script>
</body>
</html>
