<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link  href="http://fonts.googleapis.com/css?family=Quattrocento:regular" rel="stylesheet" type="text/css" >
    <link  href="http://fonts.googleapis.com/css?family=Vollkorn:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css" >
    <link  href="http://fonts.googleapis.com/css?family=Didact+Gothic:regular" rel="stylesheet" type="text/css" >
    <link  href="http://fonts.googleapis.com/css?family=Quattrocento+Sans:regular" rel="stylesheet" type="text/css" >
    <link  href="http://fonts.googleapis.com/css?family=Arvo:regular,italic,bold,bolditalic" rel="stylesheet" type="text/css" >
    <script src="@Url.Content("~/Scripts/jquery-1.4.1.min.js")" type="text/javascript"></script>

    <script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
    <script type="text/javascript" src="/ckeditor/adapters/jquery.js"></script>
    <script type="text/javascript" src="/Scripts/HtmlContent.js"></script>
</head>

<body>
    <div id="container">
        <div id="sidebar">
            <div id="header">
                <h1><a href="#">Stu Sherwin</a></h1>
                <div id="tagline">
                    <span class="selected">Developer</span> : 
                    <a href="#">musician</a> :
                    <a href="#">atheist</a>
                </div>
            </div>
            <ul id="nav">
                <li class="selected" id="code">
                    <h2>Code</h2>
                    <div class="subnav">
                        <div class="summary">A bit of text here about what it means to be writing code all of the time yo.</div>
                        <ul>
                            <li class="selected">All posts (24)</li>
                            <li><a href="#">Curriculum vitae</a></li>
                            <li><a href="#">Download this website</a></li>
                        </ul>
                    </div>
                </li>
                <li id="music">
                    <h2><a href="#">Music</a></h2>
                </li>
                <li id="philosophy">
                    <h2><a href="#">Philosophy</a></h2>
                </li>
            </ul>

            <div id="contact">
                <h3>Contact (or stalk) me here:</h3>
                <ul>
                    <li>
                        <a id="email" href="#">&nbsp;</a>
                    </li>
                    <li>
                        <a id="twitter" href="#">&nbsp;</a>
                    </li>
                    <li>
                        <a id="facebook" href="#">&nbsp;</a>
                    </li>
                    <li>
                        <a id="stackoverflow" href="#">&nbsp;</a>
                    </li>
                    <li>
                        <a id="google-code" href="#">&nbsp;</a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="content">
            <div class="margin-fix">
                @RenderBody()
            </div>
        </div>
        <div id="scroll">
            <a id="previous-post" href="#">
                <img src="/Content/up.png" />
            </a>
            <a id="next-post" href="#">
                <img src="/Content/down.png" />
            </a>
        </div>
    </div>
</body>
</html>
